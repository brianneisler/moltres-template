{
  "name": "run",
  "command": "run <script>",
  "description": "runs a script",
  "options": {
    "env": {
      "option": "-e, --env [path]",
      "description": "Set the path to a .env file"
    },
    "only": {
      "option": "-o, --only",
      "description": "Only run the specified target and not all dependencies"
    },
    "path": {
      "option": "-p, --path [path]",
      "description": "The path to target"
    },
    "stage": {
      "option": "-s, --stage [name]",
      "description": "Set the stage",
      "default": "dev"
    }
  },
  "plugin": "./plugin.js"
}
