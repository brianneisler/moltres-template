{
  "name": "test",
  "command": "test",
  "description": "runs tests on a moltres project",
  "options": {
    "env": {
      "option": "-e, --env [path]",
      "description": "Set the path to a .env file"
    },
    "only": {
      "option": "-o, --only",
      "description": "Only test the specified target and not all dependencies"
    },
    "path": {
      "option": "-p, --path [path]",
      "description": "The path to target"
    },
    "stage": {
      "option": "-s, --stage [name]",
      "description": "Set the stage",
      "default": "dev"
    }
  },
  "plugin": "./plugin.js"
}
