#!/usr/bin/env node

var program = require('commander')

program
  .description('install a package')
  .arguments('<package-query>')
  .option('-g, --global', 'use global config file')
  .option('-p, --project', 'use project config file')
  .option('-u, --user', 'use user config file')
  .action((packageQuery, options) => {
    const cli = require('../dist/cli')
    cli.init()
    cli.command('INSTALL', { options, packageQuery })
  })
  .parse(process.argv)

if (!program.args.length) {
  program.help()
}
