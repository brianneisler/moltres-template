#!/usr/bin/env node

var program = require('commander')
var package = require('../package.json')

const result = program
  .version(package.version)
  .option('-ep, --exec-path', 'path to execute on')
  .command('config [cmd]', 'set, get, or delete config')
  .command('install <package-query>', 'install a moltres package')
  .command('login', 'login to a registry user account')
  .command('logout', 'logout from a registry user account')
  .command('publish', 'publish a package to the registry')
  .command('signup', 'create a new registry user account')
  .command('uninstall <package-query> ', 'uninstall a package')
  .command('update [package-query]', 'update a package and it\'s dependencies')
  .parse(process.argv)

if (!program.args.length) program.help()
if (result == program) {
  console.log('\n  moltres: \'' + program.args[0] + '\' is not a command')
  program.help()
}
