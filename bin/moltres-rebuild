#!/usr/bin/env node

require('babel-polyfill')
var program = require('commander')

program
  .description('rebuild package dependencies')
  .arguments('[path]')
  .option('-g, --global', 'use global config file')
  .option('-p, --project', 'use project config file')
  .option('-u, --user', 'use user config file')
  .action((path, options) => {
    const { init } = require('../dist/cli')
    const cli = init()
    cli.command('REBUILD_DEPENDENCIES', { options, path })
  })
  .parse(process.argv)

if (!program.args.length) {
  program.help()
}
