{
  "firestore": {
    "predeploy": "npm run database:predeploy",
    "rules": "firestore.min.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": ".",
    "ignore": [
      "**/__mocks__/**",
      "**/.semaphore/**",
      "**/node_modules/**",
      "**/bin/**",
      "**/docs/**",
      "**/migrations/**",
      "**/scripts/**",
      "**/src/**",
      "**/tmp/**",
      "*.test.js",
      ".browserlistrc",
      ".editorconfig",
      ".env-brian",
      ".env-development",
      ".env-jonathan",
      ".env-prod",
      ".env-qa",
      ".env-test",
      ".eslintcache",
      ".eslintignore",
      ".eslintrc.js",
      ".gitignore",
      ".lintstagedrc.json",
      ".nvmrc",
      ".prettierignore",
      ".semaphore/**",
      "babel.config.js",
      "CHANGELOG.md",
      "DEVELOPMENT.md",
      "firebase-debug.log",
      "firebase.json",
      "firestore-debug.log",
      "firestore-emulator.log",
      "firestore.indexes.json",
      "firestore.min.rules",
      "firestore.rules",
      "jest.config.js",
      "NOTES.md",
      "package-lock.json",
      "prettier.config.js",
      "README.md",
      "storage.rules",
      "TODO"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.*.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000,immutable"
          }
        ]
      },
      {
        "source": "**/*.css",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "ui": {
      "host": "0.0.0.0",
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    }
  }
}
