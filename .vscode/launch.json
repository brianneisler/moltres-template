  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run tests only",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "outputCapture": "std",
      "runtimeExecutable": "${workspaceRoot}/scripts/nvm.sh",
      "runtimeArgs": ["npm", "run-script", "test:run:debug", "--", "${relativeFile}"]
    },
    {
      "name": "Launch emulators and run tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "outputCapture": "std",
      "runtimeExecutable": "${workspaceRoot}/scripts/nvm.sh",
      "runtimeArgs": ["npm", "run-script", "test:debug", "--", "${relativeFile}"]
    }
  ]
}
